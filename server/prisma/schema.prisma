generator client {
  provider = "prisma-client-js" 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Shipment{
 id           String   @id @default(auto()) @map("_id") @db.ObjectId
 orderNumber  String
 autherId     String
 truckId      String?
 truckNumber  String?
 clientName   String
 deliveryAddress String
 deliveryDay String
 actualDeliveryDay String?
 deliveryTime String?
 phone String
 gpsCoordinates String?
 recipientName String?
 status       Status @default(pending)
 organizationName String
 createdAt     DateTime  @default(now())
 updatedAt     DateTime?
}

enum Status {
  pending
  inTransit
  delivered
  delayed
}

model User {
  id        String    @id @map("_id")
  email     String    @unique
  firstName      String
  secondName  String
  phone     String?
  organizationName String
  role      Role @default(user)
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

enum Role {
  admin
  user
}

model Truck{
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  plateNumber      String
  organizationName  String
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}